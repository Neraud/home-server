apiVersion: v1
kind: Service
metadata:
  name: homeassistant-mysql
  namespace: default
  labels:
    app: homeassistant
    tier: database
spec:
  ports:
    - port: 3306
  selector:
    app: homeassistant
    tier: database
  clusterIP: None

---

apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: homeassistant-mysql
  namespace: default
  labels:
    app: homeassistant
    tier: database
spec:
  selector:
    matchLabels:
      app: homeassistant
      tier: database
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: homeassistant
        tier: database
    spec:
      containers:
      - image: mysql:5.6
        name: mysql
        env:
        - name: MYSQL_DATABASE
          value: {{ homeassistant_mysql_database }}
        - name: MYSQL_USER
          value: {{ homeassistant_mysql_user }}
        - name: MYSQL_PASSWORD
          valueFrom:
            secretKeyRef:
              name: homeassistant-mysql-pass
              key: password
        - name: MYSQL_ROOT_PASSWORD
          valueFrom:
            secretKeyRef:
              name: homeassistant-mysql-pass
              key: root_password
        ports:
        - containerPort: 3306
          name: mysql
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
        - name: homeassistant-mysql-pv-claim
          mountPath: /var/lib/mysql
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      nodeSelector:
        capability/home: 'yes'
  volumeClaimTemplates:
  - metadata:
      name: homeassistant-mysql-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_local_lvm_storage_class_name }}
      resources:
        requests:
          storage: 2G
      selector:
        matchLabels:
          app: homeassistant
          tier: database
