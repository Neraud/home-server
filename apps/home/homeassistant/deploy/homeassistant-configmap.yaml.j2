apiVersion: v1
kind: ConfigMap
metadata:
  name: homeassistant-config
  namespace: default
  labels:
    app: homeassistant
    app-component: homeassistant
data:
  ldap-auth-config.cfg: |-
    {{ lookup('template', kubernetes_app_root_path + '/home/homeassistant/config/ldap-auth-config.cfg.j2') | replace('\n', '\n    ') }}
  socat.cfg: |-
    {{ lookup('template', kubernetes_app_root_path + '/home/homeassistant/config/socat.cfg.j2') | replace('\n', '\n    ') }}
