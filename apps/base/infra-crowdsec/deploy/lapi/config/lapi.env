DISABLE_AGENT=true
# Test mode, don't share signals with CrowdSec online API
DISABLE_ONLINE_API=true
# Force DEBUG level for the container log
LEVEL_DEBUG=false
# Trace the entrypoint
DEBUG=false
CUSTOM_HOSTNAME=lapi
LOCAL_API_URL=https://lapi.infra-crowdsec.svc.cluster.local:8080
USE_TLS=true
CACERT_FILE=/etc/ssl/crowdsec/ca.crt
LAPI_CERT_FILE=/etc/ssl/crowdsec/server/server-chain.crt
LAPI_KEY_FILE=/etc/ssl/crowdsec/server/server.key
AGENTS_ALLOWED_OU=Crowdsec-Agents
BOUNCERS_ALLOWED_OU=Crowdsec-Bouncers
# Workaround for https://github.com/crowdsecurity/crowdsec/issues/2127
agents_allowed_yaml=["Crowdsec-Agents"]
# Workaround for https://github.com/crowdsecurity/crowdsec/issues/2127
bouncers_allowed_yaml=["Crowdsec-Bouncers"]
PLUGIN_DIR=/tmp/plugins
