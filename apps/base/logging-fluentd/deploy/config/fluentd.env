FLUENT_OPENSEARCH_HOST=elasticsearch.logging-elasticsearch.svc.cluster.local
FLUENT_OPENSEARCH_PORT=9200
FLUENT_OPENSEARCH_SCHEME=https
SSL_CERT_FILE=/etc/ssl/cluster/ca.crt
# https://github.com/uken/fluent-plugin-elasticsearch#stopped-to-send-events-on-k8s-why
FLUENT_OPENSEARCH_RELOAD_CONNECTIONS=false
FLUENT_OPENSEARCH_RECONNECT_ON_ERROR=true
FLUENT_OPENSEARCH_RELOAD_ON_FAILURE=true
FLUENT_SELF_HOSTNAME=fluentd.logging-fluentd.svc.cluster.local
FLUENT_REQUEST_TIMEOUT=10s
FLUENT_OPENSEARCH_BUFFER_FLUSH_THREAD_COUNT=2
TMPDIR=/tmp/app
