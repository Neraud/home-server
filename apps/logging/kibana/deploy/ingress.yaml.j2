apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: kibana
  namespace: logging
  labels:
    app: kibana
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: "/$1"
spec:
  tls:
    - hosts:
      - infra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: infra.{{ web_base_domain }}
    http:
      paths:
        - path: {{ logging_kibana_context_path | default('/kibana') }}/?(.*)
          backend:
            serviceName: kibana
            servicePort: 5601
