---
server.name: kibana
server.host: "0"
elasticsearch.url: https://elasticsearch:9200
elasticsearch.ssl.verificationMode: full
elasticsearch.ssl.certificateAuthorities: /etc/elasticsearch/ssl/ca.crt
elasticsearch.username: {{ logging_kibana_elasticsearch_user }}
elasticsearch.password: {{ logging_kibana_elasticsearch_password }}
elasticsearch.requestHeadersWhitelist: ["securitytenant","Authorization"]

#opendistro_security.multitenancy.enabled: true
# TODO workaround for https://github.com/opendistro-for-elasticsearch/security-kibana-plugin/issues/1
opendistro_security.multitenancy.enabled: false

opendistro_security.multitenancy.tenants.preferred: ["Private", "Global"]
opendistro_security.readonly_mode.roles: ["kibana_read_only"]
