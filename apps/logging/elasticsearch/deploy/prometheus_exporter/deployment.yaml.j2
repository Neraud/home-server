apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: elasticsearch-exporter
  namespace: logging
  labels:
    app: elasticsearch
    app-component: elastic-exporter
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: elasticsearch
        app-component: elastic-exporter
    spec:
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
      containers:
      - name: elastic-exporter
        # TODO change for a stable version when available. We need this RC to have the ssl-skip-verify flag
        image: justwatch/elasticsearch_exporter:1.1.0rc1
        env:
        - name: "ES_URI"
          value: "https://{{ logging_elasticsearch_exporter_user }}:{{ logging_elasticsearch_exporter_user }}@elasticsearch:9200"
        - name: "ES_ALL"
          value: "true"
        - name: "ES_SSL_SKIP_VERIFY"
          value: "false"
        - name: "ES_CA"
          value: "/etc/elasticsearch/ssl/ca.crt"
        securityContext:
          capabilities:
            drop:
            - SETPCAP
            - MKNOD
            - AUDIT_WRITE
            - CHOWN
            - NET_RAW
            - DAC_OVERRIDE
            - FOWNER
            - FSETID
            - KILL
            - SETGID
            - SETUID
            - NET_BIND_SERVICE
            - SYS_CHROOT
            - SETFCAP
          readOnlyRootFilesystem: true
        livenessProbe:
          httpGet:
            path: /health
            port: 9114
          initialDelaySeconds: 30
          timeoutSeconds: 10
        ports:
        - containerPort: 9114
          name: metrics
        readinessProbe:
          httpGet:
            path: /health
            port: 9114
          initialDelaySeconds: 10
          timeoutSeconds: 10
        resources:
          requests:
            cpu: "{{ prometheus_exporter_requests_cpu | default("25m") }}"
            memory: "{{ prometheus_exporter_requests_memory | default("64Mi") }}"
          limits:
            cpu: "{{ prometheus_exporter_limits_cpu | default("100m") }}"
            memory: "{{ prometheus_exporter_limits_memory | default("128Mi") }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
        - name: certs-volume
          mountPath: /etc/elasticsearch/ssl/ca.crt
          subPath: ca.crt
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: certs-volume
        secret:
          secretName: elasticsearch-ca
      restartPolicy: Always
