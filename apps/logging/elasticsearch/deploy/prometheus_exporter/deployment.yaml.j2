apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: elasticsearch-exporter
  namespace: logging
  labels:
    app: elasticsearch
    app-component: elastic-exporter
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: elasticsearch
        app-component: elastic-exporter
    spec:
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
      containers:
      - command:
        - /bin/elasticsearch_exporter
        - -es.uri=http://elasticsearch:9200
        - -es.all=true
        image: justwatch/elasticsearch_exporter:1.0.2
        securityContext:
          capabilities:
            drop:
            - SETPCAP
            - MKNOD
            - AUDIT_WRITE
            - CHOWN
            - NET_RAW
            - DAC_OVERRIDE
            - FOWNER
            - FSETID
            - KILL
            - SETGID
            - SETUID
            - NET_BIND_SERVICE
            - SYS_CHROOT
            - SETFCAP
          readOnlyRootFilesystem: true
        livenessProbe:
          httpGet:
            path: /health
            port: 9108
          initialDelaySeconds: 30
          timeoutSeconds: 10
        name: p8s-elastic-exporter
        ports:
        - containerPort: 9108
          name: metrics
        readinessProbe:
          httpGet:
            path: /health
            port: 9108
          initialDelaySeconds: 10
          timeoutSeconds: 10
        resources:
          requests:
            cpu: "{{ prometheus_exporter_requests_cpu | default("25m") }}"
            memory: "{{ prometheus_exporter_requests_memory | default("64Mi") }}"
          limits:
            cpu: "{{ prometheus_exporter_limits_cpu | default("100m") }}"
            memory: "{{ prometheus_exporter_limits_memory | default("128Mi") }}"
      restartPolicy: Always
