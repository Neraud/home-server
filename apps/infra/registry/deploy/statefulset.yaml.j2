apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: registry
  namespace: default
  labels:
    app: registry
spec:
  selector:
    matchLabels:
      app: registry
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: registry
    spec:
      containers:
      - image: registry:2
        name: registry
        ports:
        - containerPort: 5000
          name: registry
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
        - name: registry-pv-claim
          mountPath: /var/lib/registry
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      nodeSelector:
        capability/general-purpose: 'yes'
  volumeClaimTemplates:
  - metadata:
      name: registry-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_local_lvm_storage_class_name }}
      resources:
        requests:
          storage: 10G
      selector:
        matchLabels:
          app: registry
