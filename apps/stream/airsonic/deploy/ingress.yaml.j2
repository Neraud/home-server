apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: airsonic
  namespace: default
  labels:
    app: airsonic
spec:
  tls:
    - hosts:
      - stream.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: stream.{{ web_base_domain }}
    http:
      paths:
        - path: {{ airsonic_context_path | default('/') }}
          backend:
            serviceName: airsonic
            servicePort: 80
