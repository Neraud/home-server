apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: grafana
  namespace: monitoring
  labels:
    app: grafana
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: "/"
spec:
  rules:
  - host: infra.{{ web_base_domain }}
    http:
      paths:
        - path: /grafana
          backend:
            serviceName: grafana
            servicePort: 3000
