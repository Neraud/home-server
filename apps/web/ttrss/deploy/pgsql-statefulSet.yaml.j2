apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: ttrss-pgsql
  namespace: default
  labels:
    app: ttrss
    app-component: pgsql
spec:
  selector:
    matchLabels:
      app: ttrss
      app-component: pgsql
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: ttrss
        app-component: pgsql
    spec:
      containers:
      - image: postgres:11.1
        name: pgsql
        env:
        - name: POSTGRES_USER
          value: {{ ttrss_pqsql_user }}
        - name: POSTGRES_DB
          value: {{ ttrss_pqsql_database }}
        - name: POSTGRES_PASSWORD
          valueFrom:
            secretKeyRef:
              name: ttrss-pgsql-pass
              key: password
        - name: PGDATA
          value: /var/lib/postgresql/data/pgdata
        ports:
        - containerPort: 5432
          name: pgsql
        resources:
          requests:
            cpu: "{{ ttrss_pgsql_requests_cpu | default("250m") }}"
            memory: "{{ ttrss_pgsql_requests_memory | default("256Mi") }}"
          limits:
            cpu: "{{ ttrss_pgsql_limits_cpu | default("500m") }}"
            memory: "{{ ttrss_pgsql_limits_memory | default("256Mi") }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
        - name: ttrss-pgsql-pv-claim
          mountPath: /var/lib/postgresql/data
        - name: ttrss-pgsql-init
          mountPath: /docker-entrypoint-initdb.d/
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: ttrss-pgsql-init
        configMap:
          name: ttrss-pgsql-init
      nodeSelector:
        capability/general-purpose: 'yes'
  volumeClaimTemplates:
  - metadata:
      name: ttrss-pgsql-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_local_lvm_storage_class_name }}
      resources:
        requests:
          storage: 1G
      selector:
        matchLabels:
          app: ttrss
          app-component: pgsql
