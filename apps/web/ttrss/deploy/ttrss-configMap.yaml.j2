apiVersion: v1
kind: ConfigMap
metadata:
  name: ttrss-config
  namespace: default
  labels:
    app: ttrss
    app-component: ttrss
data:
  nginx_site.conf:  |
    {{ lookup('template', kubernetes_app_root_path + '/web/ttrss/config/nginx_site.conf.j2')  | replace('\n', '\n    ') }}
  config.php:  |
    {{ lookup('template', kubernetes_app_root_path + '/web/ttrss/config/config.php.j2')  | replace('\n', '\n    ') }}
