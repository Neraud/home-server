apiVersion: v1
kind: ConfigMap
metadata:
  name: deluge-config
  namespace: default
  labels:
    app: deluge
    app-component: deluge
data:
  core_delta.conf: |
    {{ lookup('template', kubernetes_app_root_path + '/download/deluge/config/core_delta.conf.j2') | replace('\n', '\n    ') }}
  web_delta.conf: |
    {{ lookup('template', kubernetes_app_root_path + '/download/deluge/config/web_delta.conf.j2') | replace('\n', '\n    ') }}
  mergeConf.py: |
    {{ lookup('file', kubernetes_app_root_path + '/download/deluge/config/mergeConf.py') | replace('\n', '\n    ') }}
