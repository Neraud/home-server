---

kubernetes_local_storage:
  wordpress-frontend: 
    capacity: 1G
    reclaim_policy: Retain
    storage_class: local-storage
    labels:
      app: wordpress
      tier: frontend
  wordpress-mysql: 
    capacity: 2G
    reclaim_policy: Retain
    storage_class: local-storage
    labels:
      app: wordpress
      tier: database
  ttrss-pgsql: 
    capacity: 1G
    reclaim_policy: Retain
    storage_class: local-storage
    labels:
      app: ttrss
      tier: database
