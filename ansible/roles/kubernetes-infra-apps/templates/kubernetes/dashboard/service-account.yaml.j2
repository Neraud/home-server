apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ kubernetes_dashboard_service_account_name }}
  namespace: kube-system

---

apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ kubernetes_dashboard_service_account_name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: {{ kubernetes_dashboard_service_account_name }}
  namespace: kube-system
