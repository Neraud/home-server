apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: dashboard
  namespace: {{ kubernetes_dashboard.namespace }}
  labels:
    {{ kubernetes_dashboard.labels_def | to_nice_yaml() | indent(4) }}
    {{ kubernetes_dashboard.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
{% if kubernetes_dashboard.context_root != "" %}
    nginx.ingress.kubernetes.io/rewrite-target: "/$1"
    nginx.ingress.kubernetes.io/configuration-snippet: |
      rewrite ^({{ kubernetes_dashboard.context_root }})$ $1/ permanent;
{% endif %}
spec:
  tls:
    - hosts:
      - kube.infra.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: kube.infra.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if kubernetes_dashboard.context_root == '' else kubernetes_dashboard.context_root + '/?(.*)' }}
        pathType: Prefix
        backend:
          service:
            name: kubernetes-dashboard
            port:
              name: https
