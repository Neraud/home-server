apiVersion: v1
kind: ConfigMap
metadata:
  name: grafana-etc
  namespace: {{ grafana.namespace }}
  labels:
    app: grafana
    app-component: grafana
data:
  grafana.ini: |
    {{ lookup('template', role_path + '/app/config/etc/grafana.ini.j2') | replace('\n', '\n    ') }}

  ldap.toml: |
    {{ lookup('template', role_path + '/app/config/etc/ldap.toml.j2') | replace('\n', '\n    ') }}
