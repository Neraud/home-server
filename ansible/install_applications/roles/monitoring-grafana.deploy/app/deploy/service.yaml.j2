apiVersion: v1
kind: Service
metadata:
  name: grafana
  namespace: {{ grafana.namespace }}
  labels:
    {{ grafana.labels_def | to_nice_yaml() | indent(4) }}
    {{ grafana.labels_desc | to_nice_yaml() | indent(4) }}
    prometheus-target: grafana
spec:
  ports:
  - name: http
    port: 3000
    targetPort: http
  selector:
    {{ grafana.labels_def | to_nice_yaml() | indent(4) }}
