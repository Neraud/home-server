apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: grafana
  namespace: {{ grafana.namespace }}
  labels:
    {{ grafana.labels_def | to_nice_yaml() | indent(4) }}
    {{ grafana.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
{% if grafana.context_root != "" %}
    nginx.ingress.kubernetes.io/rewrite-target: "/$1"
{% endif %}
spec:
  tls:
    - hosts:
      - grafana.monitoring.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: grafana.monitoring.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if grafana.context_root == '' else grafana.context_root + '/?(.*)' }}
        pathType: Prefix
        backend:
          service:
            name: grafana
            port:
              number: 3000
