kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-openldap
  namespace: {{ openldap.namespace }}
  labels:
    app.kubernetes.io/name: openldap
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      app.kubernetes.io/name: openldap

  ingress:
    # Allow ldap(s) from all
    - ports:
        - port: ldap
        - port: ldaps
      from: []
  