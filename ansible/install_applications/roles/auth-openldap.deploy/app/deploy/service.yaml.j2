apiVersion: v1
kind: Service
metadata:
  name: openldap
  namespace: {{ openldap.namespace }}
  labels:
    {{ openldap.labels_def | to_nice_yaml() | indent(4) }}
    {{ openldap.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  ports:
  - port: 389
    name: ldap
    targetPort: ldap
  - port: 636
    name: ldaps
    targetPort: ldaps
  selector:
    {{ openldap.labels_def | to_nice_yaml() | indent(4) }}
