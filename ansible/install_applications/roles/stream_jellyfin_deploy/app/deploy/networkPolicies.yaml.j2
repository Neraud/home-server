kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-jellyfin
  namespace: {{ jellyfin.namespace }}
  labels:
    {{ jellyfin.labels_def | to_nice_yaml() | indent(4) }}
    {{ jellyfin.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ jellyfin.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow from the ingress controller
    - ports:
        - port: jellyfin
      from:
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}

{% if homepage.config.jellyfin.enabled %}
    # Allow http from the homepage (to enable the widget)
    - ports:
        - port: jellyfin
      from:
        - namespaceSelector:
            matchLabels:
              name: {{ homepage.namespace }}
          podSelector:
            matchLabels:
              {{ homepage.labels_def | to_nice_yaml() | indent(14) }}
{% endif %}
