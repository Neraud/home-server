apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: esphome
  namespace: {{ esphome.namespace }}
  labels:
    {{ esphome.labels_def | to_nice_yaml() | indent(4) }}
    {{ esphome.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: "/$1"
spec:
  tls:
    - hosts:
      - home.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: home.{{ web_base_domain }}
    http:
      paths:
      - path: /esphome/?(.*)
        pathType: Prefix
        backend:
          service:
            name: esphome
            port:
              name: http
