kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-esphome
  namespace: {{ esphome.namespace }}
  labels:
    {{ esphome.labels_def | to_nice_yaml() | indent(4) }}
    {{ esphome.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ esphome.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    - ports:
        - port: http
      from:
        # Allow from the ingress controller
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}
