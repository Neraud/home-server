apiVersion: v1
kind: Secret
metadata:
  name: ntfy-alertmanager-config
  namespace: {{ ntfy.namespace }}
  labels:
    {{ mailhog.labels_def | to_nice_yaml() | indent(4) }}
    {{ mailhog.labels_desc | to_nice_yaml() | indent(4) }}
type: Opaque
data:
  config.scfg: {{ lookup('template', role_path + '/app/config/alertmanager-config.scfg.j2', convert_data=False) | b64encode }}
