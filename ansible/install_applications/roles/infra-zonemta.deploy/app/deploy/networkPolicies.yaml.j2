kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-zonemta
  namespace: {{ zonemta.namespace }}
  labels:
    app.kubernetes.io/name: zonemta
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      app.kubernetes.io/name: zonemta
      app.kubernetes.io/component: zonemta

  ingress:
    # Allow smtp from all
    - ports:
        - port: smtp
      from: []
    
    # Allow metrics from Prometheus
    - ports:
        - port: metrics
      from:
        - namespaceSelector:
            matchLabels:
              name: {{ prometheus.namespace }}
          podSelector:
            matchLabels:
              app.kubernetes.io/name: prometheus
              prometheus: k8s
