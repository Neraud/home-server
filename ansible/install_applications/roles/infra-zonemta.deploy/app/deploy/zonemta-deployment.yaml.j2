apiVersion: apps/v1
kind: Deployment
metadata:
  name: zonemta
  namespace: default
  labels:
    app: zonemta
    app-component: zonemta
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  selector:
    matchLabels:
      app: zonemta
      app-component: zonemta
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: zonemta
        app-component: zonemta
    spec:
      containers:
      - image: {{ docker_registry.url }}/zone-mta
        name: zonemta
        env:
        - name: NODE_OPTIONS
          value: "--max-old-space-size={{ zonemta_zonemta_nodejs_max_memory | default("32") }}"
        ports:
        - containerPort: 1587
          name: smtp
        - containerPort: 12080
          name: metrics
        resources:
          requests:
            cpu: "{{ zonemta_zonemta_requests_cpu | default("100m") }}"
            # ZoneMTA runs multiple node processes, be sure to have at least 5 times 'max-old-space-size' (and more if you use more processes)
            memory: "{{ zonemta_zonemta_requests_memory | default("160Mi") }}"
          limits:
            cpu: "{{ zonemta_zonemta_limits_cpu | default("200m") }}"
            memory: "{{ zonemta_zonemta_limits_memory | default("160Mi") }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
        - name: zonemta-config
          mountPath: /opt/zone-mta/config
        - name: zonemta-certificates
          mountPath: /opt/zone-mta/certs
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: zonemta-config
        secret:
          secretName: zonemta-config
      - name: zonemta-certificates
        secret:
          secretName: zonemta-certificates
      nodeSelector:
        capability/general-purpose: 'yes'
