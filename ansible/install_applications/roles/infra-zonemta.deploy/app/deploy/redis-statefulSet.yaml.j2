apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: zonemta-redis
  namespace: "{{ zonemta.namespace }}"
  labels:
    app: zonemta
    app-component: redis
spec:
  selector:
    matchLabels:
      app: zonemta
      app-component: redis
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: zonemta
        app-component: redis
    spec:
      containers:
      - image: "{{ zonemta_redis.container.image }}"
        name: redis
        command:
        - redis-server
        - "--requirepass {{ zonemta_redis.password }}"
        ports:
        - containerPort: 6379
          name: redis
        resources:
          requests:
            cpu: "{{ zonemta_redis.container.requests_cpu }}"
            memory: "{{ zonemta_redis.container.requests_memory }}"
          limits:
            cpu: "{{ zonemta_redis.container.limits_cpu }}"
            memory: "{{ zonemta_redis.container.limits_memory }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
        - name: zonemta-redis-pv-claim
          mountPath: /data
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      nodeSelector:
        capability/general-purpose: 'yes'
  volumeClaimTemplates:
  - metadata:
      name: zonemta-redis-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_glusterfs_storage_class_name }}
      resources:
        requests:
          storage: 32M
      selector:
        matchLabels:
          app: zonemta
          app-component: redis
