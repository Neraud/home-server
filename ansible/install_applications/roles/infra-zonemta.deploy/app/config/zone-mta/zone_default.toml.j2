[default]
preferIPv6=false
ignoreIPv6=true
processes=1
connections=5
pool="default"

# If you want to send messages for this zone to next MTA instead of actual MX, then
# uncomment following lines and change values
host = "{{ zonemta_forward_mta_host }}"
port = {{ zonemta_forward_mta_port }}
{% if zonemta_forward_mta_auth_enabled | bool %}
[default.auth]
user = "{{ zonemta_forward_mta_user }}"
pass = "{{ zonemta_forward_mta_password }}"
{% endif %}
