apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: sickchill
  namespace: {{ sickchill.namespace }}
  labels:
    {{ sickchill.labels_def | to_nice_yaml() | indent(4) }}
    {{ sickchill.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    nginx.ingress.kubernetes.io/proxy-read-timeout: "900"
    nginx.ingress.kubernetes.io/proxy-connect-timeout: "900"
    nginx.ingress.kubernetes.io/proxy-send-timeout: "900"
    gethomepage.dev/enabled: "true"
    gethomepage.dev/group: Download
    gethomepage.dev/name: SickChill
    gethomepage.dev/description: Automatic Video Library Manager for TV Shows
    gethomepage.dev/icon: sickchill
    gethomepage.dev/pod-selector: "app.kubernetes.io/name=sickchill"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - sickchill.dl.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: sickchill.dl.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if sickchill.context_root == '' else sickchill.context_root }}
        pathType: Prefix
        backend:
          service:
            name: sickchill
            port:
              number: 80
