apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: homeassistant-mysql
  namespace: {{ homeassistant.namespace }}
  labels:
    {{ homeassistant_mysql.labels_def | to_nice_yaml() | indent(4) }}
    {{ homeassistant_mysql.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  selector:
    matchLabels:
      {{ homeassistant_mysql.labels_def | to_nice_yaml() | indent(6) }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        {{ homeassistant_mysql.labels_def | to_nice_yaml() | indent(8) }}
        {{ homeassistant_mysql.labels_desc | to_nice_yaml() | indent(8) }}
    spec:
      initContainers:
      - name: create-folders
        image: "{{ busybox.private_image | image_full_name }}"
        imagePullPolicy: Always
        command:
          - "sh"
          - "-c"
          - |
            mkdir -p /homeassistant-mysql-pv-claim/mysql
            chown -R 1000:1000 /homeassistant-mysql-pv-claim/mysql
        volumeMounts:
        - name: homeassistant-mysql-pv-claim
          mountPath: /homeassistant-mysql-pv-claim
      containers:
      - name: mysql
        image: "{{ homeassistant_mysql.private_image | image_full_name }}"
        imagePullPolicy: Always        
        env:
        - name: MYSQL_DATABASE
          value: {{ homeassistant_mysql.database }}
        - name: MYSQL_USER
          value: {{ homeassistant_mysql.user }}
        - name: MYSQL_PASSWORD
          valueFrom:
            secretKeyRef:
              name: homeassistant-mysql-pass
              key: password
        - name: MYSQL_ROOT_PASSWORD
          valueFrom:
            secretKeyRef:
              name: homeassistant-mysql-pass
              key: root_password
        ports:
        - containerPort: 3306
          name: mysql
        securityContext:
          runAsNonRoot: true
          runAsUser: 1000 # random uid
          readOnlyRootFilesystem: true
        readinessProbe:
          exec:
            command:
            - sh
            - -c
            - "mysqladmin ping -u root -p${MYSQL_ROOT_PASSWORD}"
          initialDelaySeconds: 3
          periodSeconds: 5
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
          readOnly: true
        - name: homeassistant-mysql-pv-claim
          mountPath: /var/lib/mysql
          subPath: mysql
        - name: tmp-volume
          mountPath: /tmp
        - name: run-volume
          mountPath: /var/run/mysqld
        resources:
          requests:
            cpu: "{{ homeassistant_mysql.container.requests_cpu }}"
            memory: "{{ homeassistant_mysql.container.requests_memory }}"
          limits:
            cpu: "{{ homeassistant_mysql.container.limits_cpu }}"
            memory: "{{ homeassistant_mysql.container.limits_memory }}"
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: tmp-volume
        emptyDir: {}
      - name: run-volume
        emptyDir: {}
      imagePullSecrets:
      - name: docker-config
      nodeSelector:
        capability/general-purpose: 'yes'
  volumeClaimTemplates:
  - metadata:
      name: homeassistant-mysql-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_longhorn_high_durability_storage_class_name }}
      resources:
        requests:
          storage: {{ homeassistant_mysql.container.storage.data }}
