apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: homeassistant
  namespace: {{ homeassistant.namespace }}
  labels:
    {{ homeassistant.labels_def | to_nice_yaml() | indent(4) }}
    {{ homeassistant.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    gethomepage.dev/enabled: "true"
    gethomepage.dev/group: Home
    gethomepage.dev/name: HomeAssistant
    gethomepage.dev/description: Home automation
    gethomepage.dev/icon: home-assistant
    gethomepage.dev/pod-selector: "app.kubernetes.io/name=homeassistant"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - homeassistant.home.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: homeassistant.home.{{ web_base_domain }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: homeassistant
            port:
              number: 80
