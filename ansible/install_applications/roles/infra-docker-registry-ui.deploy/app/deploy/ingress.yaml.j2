apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: docker-registry-ui
  namespace: {{ docker_registry_ui.namespace }}
  labels:
    {{ docker_registry_ui.labels_def | to_nice_yaml() | indent(4) }}
    {{ docker_registry_ui.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  tls:
    - hosts:
      - docker-registry-ui.infra.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: docker-registry-ui.infra.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if docker_registry_ui.context_root == '' else docker_registry_ui.context_root }}
        pathType: Prefix
        backend:
          service:
            name: docker-registry-ui
            port:
              name: http
