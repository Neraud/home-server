apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: nodered
  namespace: {{ nodered.namespace }}
  labels:
    {{ nodered.labels_def | to_nice_yaml() | indent(4) }}
    {{ nodered.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - nodered.home.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: nodered.home.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if nodered.context_root == '' else nodered.context_root }}
        pathType: Prefix
        backend:
          service:
            name: nodered
            port:
              number: 80
