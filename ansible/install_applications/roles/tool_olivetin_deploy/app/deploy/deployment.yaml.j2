apiVersion: apps/v1
kind: Deployment
metadata:
  name: olivetin
  namespace: {{ olivetin.namespace }}
  labels:
    {{ olivetin.labels_def | to_nice_yaml() | indent(4) }}
    {{ olivetin.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  selector:
    matchLabels:
      {{ olivetin.labels_def | to_nice_yaml() | indent(6) }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        {{ olivetin.labels_def | to_nice_yaml() | indent(8) }}
        {{ olivetin.labels_desc | to_nice_yaml() | indent(8) }}
    spec:
      containers:
      - name: olivetin
        image: "{{ olivetin.private_image | image_full_name }}"
        imagePullPolicy: Always
        ports:
        - containerPort: 1337
          name: http
        securityContext:
          runAsNonRoot: true
          runAsUser: 1000 # olivetin
          readOnlyRootFilesystem: true
        readinessProbe:
          httpGet:
            scheme: HTTP
            path: /
            port: http
          initialDelaySeconds: 3
          periodSeconds: 5
        resources:
          requests:
            cpu: "{{ olivetin.container.requests_cpu }}"
            memory: "{{ olivetin.container.requests_memory }}"
          limits:
            cpu: "{{ olivetin.container.limits_cpu }}"
            memory: "{{ olivetin.container.limits_memory }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
          readOnly: true
        - name: olivetin-config
          mountPath: /etc/OliveTin/config.yaml
          subPath: config.yaml
        - name: olivetin-config
          mountPath: /etc/OliveTin/images.csv
          subPath: images.csv
        - name: images-volume
          mountPath: /var/www/olivetin/customIcons
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: olivetin-config
        configMap:
          name: olivetin-config
      - name: images-volume
        emptyDir: {}
      nodeSelector:
        capability/general-purpose: 'yes'
