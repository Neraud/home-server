apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: olivetin
  namespace: {{ olivetin.namespace }}
  labels:
    {{ olivetin.labels_def | to_nice_yaml() | indent(4) }}
    {{ olivetin.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    gethomepage.dev/enabled: "true"
    gethomepage.dev/group: Tools
    gethomepage.dev/name: OliveTin
    gethomepage.dev/description: OliveTin gives safe and simple access to predefined shell commands from a web interface
    gethomepage.dev/icon: olivetin
    gethomepage.dev/pod-selector: "app.kubernetes.io/name=olivetin"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - olivetin.tool.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: olivetin.tool.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if olivetin.context_root == '' else olivetin.context_root }}
        pathType: Prefix
        backend:
          service:
            name: olivetin
            port:
              name: http
