apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: pyload
  namespace: {{ pyload.namespace }}
  labels:
    {{ pyload.labels_def | to_nice_yaml() | indent(4) }}
    {{ pyload.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    gethomepage.dev/enabled: "true"
    gethomepage.dev/group: Download
    gethomepage.dev/name: PyLoad
    gethomepage.dev/description: HTTP download manager
    gethomepage.dev/icon: pyload
    gethomepage.dev/pod-selector: "app.kubernetes.io/name=pyload"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - pyload.dl.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: pyload.dl.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if pyload.context_root == '' else pyload.context_root }}
        pathType: Prefix
        backend:
          service:
            name: pyload
            port:
              number: 80
