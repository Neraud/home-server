# Database configuration
# this file is loaded when NODE_ENV=production

# MongoDB connection string
mongo="mongodb://{{ zonemta_mongo.user }}:{{ zonemta_mongo.password }}@mongo:27017/{{ zonemta_mongo.database }}"

# Database name for ZoneMTA data in MongoDB. In most cases it should be the same as in the connection string
sender="{{ zonemta_mongo.database }}"

# Redis connection string
[redis]
host = "redis"
port = 6379
db = 0
username = "{{ zonemta_redis.username }}"
password = "{{ zonemta_redis.password }}"
