kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-ttrss-pgsql
  namespace: {{ ttrss.namespace }}
  labels:
    {{ ttrss_pgsql.labels_def | to_nice_yaml() | indent(4) }}
    {{ ttrss_pgsql.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ ttrss_pgsql.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow from ttrss
    - ports:
        - port: pgsql
      from:
        - podSelector:
            matchLabels:
              {{ ttrss.labels_def | to_nice_yaml() | indent(14) }}

---

kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-ttrss-server
  namespace: {{ ttrss.namespace }}
  labels:
    {{ ttrss.labels_def | to_nice_yaml() | indent(4) }}
    {{ ttrss.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ ttrss.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow from the ingress controller
    - ports:
        - port: ttrss
      from:
        - namespaceSelector:
            matchLabels:
              app.kubernetes.io/name: ingress-nginx
          podSelector:
            matchLabels:
              app.kubernetes.io/name: ingress-nginx
