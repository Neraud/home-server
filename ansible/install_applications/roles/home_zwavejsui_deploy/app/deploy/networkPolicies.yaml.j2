kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-zwavejsui
  namespace: {{ zwavejsui.namespace }}
  labels:
    {{ zwavejsui.labels_def | to_nice_yaml() | indent(4) }}
    {{ zwavejsui.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ zwavejsui.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow http from the ingress controller
    - ports:
        - port: http
      from:
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}

    # Allow ws from HomeAssistant
    - ports:
        - port: ws
      from:
        - namespaceSelector:
            matchLabels:
              app.kubernetes.io/name: home-homeassistant
          podSelector:
            matchLabels:
              app.kubernetes.io/name: homeassistant
              app.kubernetes.io/component: homeassistant
