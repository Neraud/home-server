apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: gitlab
  namespace: default
  labels:
    app: gitlab
spec:
  tls:
    - hosts:
      - dev.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: dev.{{ web_base_domain }}
    http:
      paths:
        - path: {{ gitlab_context_path }}
          backend:
            serviceName: gitlab
            servicePort: 80
