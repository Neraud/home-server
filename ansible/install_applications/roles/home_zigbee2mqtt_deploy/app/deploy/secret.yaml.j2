apiVersion: v1
kind: Secret
metadata:
  name: zigbee2mqtt-secret
  namespace: "{{ zigbee2mqtt.namespace }}"
  labels:
    {{ zigbee2mqtt.labels_def | to_nice_yaml() | indent(4) }}
    {{ zigbee2mqtt.labels_desc | to_nice_yaml() | indent(4) }}
type: Opaque
data:
  mqtt_username: {{ zigbee2mqtt.mqtt.user | b64encode }}
  mqtt_password: {{ zigbee2mqtt.mqtt.password | b64encode }}
