apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: heimdall
  namespace: {{ heimdall.namespace }}
  labels:
    app.kubernetes.io/name: heimdall
spec:
  tls:
    - hosts:
      - heimdall.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: heimdall.{{ web_base_domain }}
    http:
      paths:
        - path: /
          backend:
            serviceName: heimdall
            servicePort: 80
