kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-heimdall
  namespace: {{ heimdall.namespace }}
  labels:
    app.kubernetes.io/name: heimdall
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      app.kubernetes.io/name: heimdall
      app.kubernetes.io/component: heimdall

  ingress:
    # Allow from the ingress controller
    - ports:
        - port: http
      from:
        - namespaceSelector:
            matchLabels:
              app.kubernetes.io/name: ingress-nginx
          podSelector:
            matchLabels:
              app.kubernetes.io/name: ingress-nginx
