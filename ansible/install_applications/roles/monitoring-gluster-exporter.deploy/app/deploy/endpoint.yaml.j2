
kind: Endpoints
apiVersion: v1
metadata:
  name: gluster-exporter
  namespace: {{ gluster_exporter.namespace }}
subsets:
{% for glusterfs_node in groups['glusterfs_servers'] | map('extract', hostvars, ['ansible_host']) %}
- addresses:
  - ip: {{ glusterfs_node }}
  ports:
  - name: metrics
    port: {{ gluster_exporter.port }}
{% endfor %}
