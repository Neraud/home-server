kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-sabnzbd
  namespace: {{ sabnzbd.namespace }}
  labels:
    {{ sabnzbd.labels_def | to_nice_yaml() | indent(4) }}
    {{ sabnzbd.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ sabnzbd.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow http from the ingress controller
    - ports:
        - port: http
      from:
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}

{% if homepage.config.sabnzbd.enabled %}
    # Allow http from the homepage (to enable the widget)
    - ports:
        - port: http
      from:
        - namespaceSelector:
            matchLabels:
              name: {{ homepage.namespace }}
          podSelector:
            matchLabels:
              {{ homepage.labels_def | to_nice_yaml() | indent(14) }}
{% endif %}

    # Allow from sickchill
    - ports:
        - port: http
      from:
        - namespaceSelector:
            matchLabels:
              name: {{ sickchill.namespace }}
          podSelector:
            matchLabels:
              {{ sickchill.labels_def | to_nice_yaml() | indent(14) }}
