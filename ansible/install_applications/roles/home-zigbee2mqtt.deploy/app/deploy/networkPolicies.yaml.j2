kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-zigbee2mqtt
  namespace: {{ zigbee2mqtt.namespace }}
  labels:
    {{ zigbee2mqtt.labels_def | to_nice_yaml() | indent(4) }}
    {{ zigbee2mqtt.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ zigbee2mqtt.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow http from the ingress controller
    - ports:
        - port: http
      from:
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}
