apiVersion: v1
kind: Service
metadata:
  name: crowdsec-lapi-metrics
  namespace: {{ crowdsec.namespace }}
  labels:
    {{ crowdsec_lapi.labels_def | to_nice_yaml() | indent(4) }}
    {{ crowdsec_lapi.labels_desc | to_nice_yaml() | indent(4) }}
    prometheus-target: crowdsec-lapi
spec:
  ports:
  - name: metrics
    port: 6060
    targetPort: metrics
  selector:
    {{ crowdsec_lapi.labels_def | to_nice_yaml() | indent(4) }}
