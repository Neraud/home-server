kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-crowdsec-lapi
  namespace: {{ crowdsec.namespace }}
  labels:
    {{ crowdsec_lapi.labels_def | to_nice_yaml() | indent(4) }}
    {{ crowdsec_lapi.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ crowdsec_lapi.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    - ports:
        - port: http
      from:
        # Allow from agents
        - podSelector:
            matchLabels:
              {{ crowdsec_agent.labels_def | to_nice_yaml() | indent(14) }}
    - ports:
        - port: metrics
      from:
        # Allow from prometheus
        - namespaceSelector:
            matchLabels:
              name: {{ prometheus.namespace }}
          podSelector:
            matchLabels:
              {{ prometheus.labels_def | to_nice_yaml() | indent(14) }}
