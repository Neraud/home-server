apiVersion: v1
kind: Service
metadata:
  name: lapi-lb
  namespace: {{ crowdsec.namespace }}
  labels:
    {{ crowdsec_lapi.labels_def | to_nice_yaml() | indent(4) }}
    {{ crowdsec_lapi.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  type: LoadBalancer
  loadBalancerIP: {{ kubernetes_crowdsec_lapi_ip }}
  externalTrafficPolicy: Local
  ports:
  - name: lapi
    port: 8080
    targetPort: lapi
  selector:
    {{ crowdsec_lapi.labels_def | to_nice_yaml() | indent(4) }}
