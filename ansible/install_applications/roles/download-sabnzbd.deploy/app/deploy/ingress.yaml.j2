apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: sabnzbd
  namespace: default
spec:
  tls:
    - hosts:
      - dl.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: dl.{{ web_base_domain }}
    http:
      paths:
      - path: {{ sabnzbd.context_root }}
        backend:
          serviceName: sabnzbd
          servicePort: 80
