apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: sabnzbd
  namespace: {{ sabnzbd.namespace }}
  labels:
    {{ sabnzbd.labels_def | to_nice_yaml() | indent(4) }}
    {{ sabnzbd.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  selector:
    matchLabels:
      {{ sabnzbd.labels_def | to_nice_yaml() | indent(6) }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        {{ sabnzbd.labels_def | to_nice_yaml() | indent(8) }}
        {{ sabnzbd.labels_desc | to_nice_yaml() | indent(8) }}
    spec:
      initContainers:
      - name: inject-config
        image: python:2.7.16-alpine3.9
        command: [ "python", "/tmp/config/mergeConf.py" ]
        volumeMounts:
        - name: sabnzbd-config-pv-claim
          mountPath: /config
        - name: sabnzbd-config
          mountPath: /tmp/config
      containers:
      - name: sabnzbd
        image: "{{ sabnzbd.container.image }}"
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
          name: http
        securityContext:
          # TODO : sabnzbd requires to run as root for now :/
          #runAsNonRoot: true
          #runAsUser: xxxx
          #runAsGroup: xxxx
          #readOnlyRootFilesystem: true
        readinessProbe:
          httpGet:
            scheme: HTTP
            path: {{ sabnzbd.context_root }}
            port: http
          initialDelaySeconds: 3
          periodSeconds: 5
        resources:
          requests:
            cpu: "{{ sabnzbd.container.requests_cpu }}"
            memory: "{{ sabnzbd.container.requests_memory }}"
          limits:
            cpu: "{{ sabnzbd.container.limits_cpu }}"
            memory: "{{ sabnzbd.container.limits_memory }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
          readOnly: true
        - name: sabnzbd-config-pv-claim
          mountPath: /config
        - name: sabnzbd-download
          mountPath: /mnt/download
        # sabnzbd-config is not used by the container directly
        # But mounting it enables the use of the reloader
        - name: sabnzbd-config
          mountPath: /tmp/config
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: sabnzbd-config
        configMap:
          name: sabnzbd-config
      - name: sabnzbd-download
        persistentVolumeClaim:
          claimName: nfs-download
      nodeSelector:
        capability/general-purpose: 'yes'
  volumeClaimTemplates:
  - metadata:
      name: sabnzbd-config-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_glusterfs_storage_class_name }}
      resources:
        requests:
          storage: 32M
      selector:
        matchLabels:
          {{ sabnzbd.labels_def | to_nice_yaml() | indent(10) }}
