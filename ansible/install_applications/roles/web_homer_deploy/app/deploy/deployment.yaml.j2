apiVersion: apps/v1
kind: Deployment
metadata:
  name: homer
  namespace: {{ homer.namespace }}
  labels:
    {{ homer.labels_def | to_nice_yaml() | indent(4) }}
    {{ homer.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  selector:
    matchLabels:
      {{ homer.labels_def | to_nice_yaml() | indent(6) }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        {{ homer.labels_def | to_nice_yaml() | indent(8) }}
        {{ homer.labels_desc | to_nice_yaml() | indent(8) }}
    spec:
      containers:
      - name: homer
        image: "{{ homer.private_image | image_full_name }}"
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
          name: http
        env:
        - name: SUBFOLDER
          value: "{{ homer.context_root }}"
        securityContext:
          runAsNonRoot: true
          runAsUser: 1000 # lighttpd
          readOnlyRootFilesystem: true
        resources:
          requests:
            cpu: "{{ homer.container.requests_cpu }}"
            memory: "{{ homer.container.requests_memory }}"
          limits:
            cpu: "{{ homer.container.limits_cpu }}"
            memory: "{{ homer.container.limits_memory }}"
        readinessProbe:
          httpGet:
            scheme: HTTP
            path: {{ homer.context_root }}
            port: http
          initialDelaySeconds: 3
          periodSeconds: 5
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
          readOnly: true
        - name: tmp-asset-volume
          mountPath: /www/assets
        - name: homer-config
          mountPath: /www/assets/config.yml
          subPath: config.yml
        - name: homer-config
          mountPath: /opt/images.csv
          subPath: images.csv
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: homer-config
        configMap:
          name: homer-config
      - name: tmp-asset-volume
        emptyDir: {}
      imagePullSecrets:
      - name: docker-config
      nodeSelector:
        capability/general-purpose: 'yes'
