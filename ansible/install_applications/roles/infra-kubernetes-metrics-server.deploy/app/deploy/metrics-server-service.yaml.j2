---
apiVersion: v1
kind: Service
metadata:
  name: metrics-server
  namespace: {{ kubernetes_metrics_server.namespace }}
  labels:
    kubernetes.io/name: "Metrics-server"
    kubernetes.io/cluster-service: "true"
spec:
  selector:
    app.kubernetes.io/name: metrics-server
  ports:
  - port: 443
    protocol: TCP
    targetPort: 443
    name: metrics
