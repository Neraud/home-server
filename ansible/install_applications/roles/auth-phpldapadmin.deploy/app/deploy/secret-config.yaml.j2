apiVersion: v1
kind: Secret
metadata:
  name: phpldapadmin-config
  namespace: {{ phpldapadmin.namespace }}
  labels:
    {{ phpldapadmin.labels_def | to_nice_yaml() | indent(4) }}
    {{ phpldapadmin.labels_desc | to_nice_yaml() | indent(4) }}
data:
{% for phpldapadmin_config_file in phpldapadmin_config_files %}
  {{ phpldapadmin_config_file | basename | replace(".j2", "") }}: {{ lookup(phpldapadmin_config_file | regex_search('.j2$') | ternary('template','file'), phpldapadmin_config_file) | b64encode }}
{% endfor %}
