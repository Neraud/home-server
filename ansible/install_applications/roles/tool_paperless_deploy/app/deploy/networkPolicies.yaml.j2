kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-pgsql
  namespace: {{ paperless.namespace }}
  labels:
    {{ paperless_pgsql.labels_def | to_nice_yaml() | indent(4) }}
    {{ paperless_pgsql.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ paperless_pgsql.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow from paperless
    - ports:
        - port: pgsql
      from:
        - podSelector:
            matchLabels:
              {{ paperless.labels_def | to_nice_yaml() | indent(14) }}

