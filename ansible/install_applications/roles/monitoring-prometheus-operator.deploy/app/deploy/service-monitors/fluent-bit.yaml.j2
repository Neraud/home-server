apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app: fluent-bit
  name: fluent-bit
  namespace: monitoring
spec:
  endpoints:
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: metrics
    path: /api/v1/metrics/prometheus
  namespaceSelector:
    matchNames:
    - {{ fluentbit.namespace }}
  selector:
    matchLabels:
      prometheus-target: fluent-bit
