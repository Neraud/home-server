apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app.kubernetes.io/name: alertmanager
  name: alertmanager
  namespace: {{ prometheus.namespace }}
spec:
  endpoints:
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    metricRelabelings:
    # Drop unused metrics
    - action: drop
      regex: alertmanager_http_(request|response)_.*
      sourceLabels:
      - __name_  
    port: web
  selector:
    matchLabels:
      alertmanager: main
      prometheus-target: alertmanager-main
