apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app: gluster-exporter
  name: gluster-exporter
  namespace: monitoring
spec:
  endpoints:
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: metrics
  selector:
    matchLabels:
      prometheus-target: gluster-exporter
