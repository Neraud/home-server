apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app: gitlab
  name: gitlab
  namespace: monitoring
spec:
  endpoints:
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: gitlab-metrics
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: gitaly-metrics
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: nodeexp-metrics
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: redis-metrics
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: postgre-metrics
  namespaceSelector:
    matchNames:
    - default
  selector:
    matchLabels:
      prometheus-target: gitlab
