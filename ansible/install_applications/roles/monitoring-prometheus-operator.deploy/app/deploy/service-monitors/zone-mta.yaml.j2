apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app: zonemta
  name: zonemta
  namespace: {{ prometheus.namespace }}
spec:
  endpoints:
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: metrics
  namespaceSelector:
    matchNames:
    - {{ zonemta.namespace }}
  selector:
    matchLabels:
      prometheus-target: zonemta
