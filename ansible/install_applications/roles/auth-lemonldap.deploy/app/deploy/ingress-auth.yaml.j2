apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: lemonldap-auth
  namespace: {{ lemonldap.namespace }}
  labels:
    {{ lemonldap.labels_def | to_nice_yaml() | indent(4) }}
    {{ lemonldap.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  tls:
    - hosts:
      - lemonldap.auth.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: lemonldap.auth.{{ web_base_domain }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: lemonldap
            port:
              name: http
