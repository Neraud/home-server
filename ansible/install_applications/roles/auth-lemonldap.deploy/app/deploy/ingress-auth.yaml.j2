apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: lemonldap-auth
  namespace: {{ lemonldap.namespace }}
  labels:
    {{ lemonldap.labels_def | to_nice_yaml() | indent(4) }}
    {{ lemonldap.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    # Not needed here, but it's a workaround for the "duplicated location /" error in ingress-nginx
    nginx.ingress.kubernetes.io/use-regex: "true"
spec:
  tls:
    - hosts:
      - auth.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: auth.{{ web_base_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: lemonldap
          servicePort: http
