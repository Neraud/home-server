apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: lemonldap-manager
  namespace: {{ lemonldap.namespace }}
  labels:
    {{ lemonldap.labels_def | to_nice_yaml() | indent(4) }}
    {{ lemonldap.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    #nginx.ingress.kubernetes.io/upstream-vhost: lemonldap.auth.intra.{{ web_base_domain }}
spec:
  ingressClassName: nginx
  rules:
  - host: lemonldap.auth.intra.{{ web_base_domain }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: lemonldap
            port:
              name: http
