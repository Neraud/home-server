kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-mosquitto
  namespace: {{ mosquitto.namespace }}
  labels:
    app.kubernetes.io/name: mosquitto
    app.kubernetes.io/component: mosquitto
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      app.kubernetes.io/name: mosquitto
      app.kubernetes.io/component: mosquitto

  ingress:
    - ports:
        - port: mqtt
        - port: mqtts
      from:
        # Allow from test pods
        - podSelector:
            matchLabels:
              app.kubernetes.io/name: mosquitto
              app.kubernetes.io/component: test

        # Allow from the ingress controller
        - namespaceSelector:
            matchLabels:
              app.kubernetes.io/name: ingress-nginx
          podSelector:
            matchLabels:
              app.kubernetes.io/name: ingress-nginx
        
        # Allow from homeassistant
        - namespaceSelector:
            matchLabels:
              name: {{ homeassistant.namespace }}
          podSelector:
            matchLabels:
              {{ homeassistant.labels_def | to_nice_yaml() | indent(14) }}

        # Allow from roomassistant
        - namespaceSelector:
            matchLabels:
              name: {{ roomassistant.namespace }}
          podSelector:
            matchLabels:
              app.kubernetes.io/name: roomassistant
              app.kubernetes.io/component: roomassistant
