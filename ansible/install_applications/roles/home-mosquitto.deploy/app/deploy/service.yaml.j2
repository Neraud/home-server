apiVersion: v1
kind: Service
metadata:
  name: mosquitto
  namespace: {{ mosquitto.namespace }}
  labels:
    app.kubernetes.io/name: mosquitto
spec:
  ports:
  - port: 1883
    name: mqtt
  - port: 8883
    name: mqtts
  selector:
    app.kubernetes.io/name: mosquitto
    app.kubernetes.io/component: mosquitto
