apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: pgsql
  namespace: {{ miniflux.namespace }}
  labels:
    {{ miniflux_pgsql.labels_def | to_nice_yaml() | indent(4) }}
    {{ miniflux_pgsql.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  selector:
    matchLabels:
      {{ miniflux_pgsql.labels_def | to_nice_yaml() | indent(6) }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        {{ miniflux_pgsql.labels_def | to_nice_yaml() | indent(8) }}
        {{ miniflux_pgsql.labels_desc | to_nice_yaml() | indent(8) }}
    spec:
      initContainers:
      - name: create-folders
        image: "{{ busybox.private_image | image_full_name }}"
        imagePullPolicy: Always
        command:
          - "sh"
          - "-c"
          - |
            mkdir -p /var/lib/postgresql/data
            chown -R 70:70 /var/lib/postgresql/data
        volumeMounts:
        - name: miniflux-pgsql-pv-claim
          mountPath: /var/lib/postgresql
      containers:
      - name: pgsql
        image: "{{ miniflux_pgsql.private_image | image_full_name }}"
        imagePullPolicy: Always
        env:
        - name: POSTGRES_USER
          value: {{ miniflux_pgsql.user }}
        - name: POSTGRES_DB
          value: {{ miniflux_pgsql.database }}
        - name: POSTGRES_PASSWORD
          valueFrom:
            secretKeyRef:
              name: pgsql-pass
              key: password
        ports:
        - containerPort: 5432
          name: pgsql
        securityContext:
          runAsNonRoot: true
          runAsUser: 70 # postgres
          readOnlyRootFilesystem: true
        readinessProbe:
           exec:
              command:
                - /bin/sh
                - -c
                - exec pg_isready -U {{ miniflux_pgsql.user }} -d {{ miniflux_pgsql.database }} -h 127.0.0.1
        resources:
          requests:
            cpu: "{{ miniflux_pgsql.container.requests_cpu }}"
            memory: "{{ miniflux_pgsql.container.requests_memory }}"
          limits:
            cpu: "{{ miniflux_pgsql.container.limits_cpu }}"
            memory: "{{ miniflux_pgsql.container.limits_memory }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
          readOnly: true
        - name: miniflux-pgsql-pv-claim
          mountPath: /var/lib/postgresql/data
          subPath: data
        - name: run-volume
          mountPath: /var/run/postgresql/
        - name: tmp-volume
          mountPath: /tmp
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: run-volume
        emptyDir: {}
      - name: tmp-volume
        emptyDir: {}
      imagePullSecrets:
      - name: docker-config
      nodeSelector:
        capability/general-purpose: 'yes'
  volumeClaimTemplates:
  - metadata:
      name: miniflux-pgsql-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_longhorn_high_durability_storage_class_name }}
      resources:
        requests:
          storage: {{ miniflux_pgsql.container.storage.data }}
