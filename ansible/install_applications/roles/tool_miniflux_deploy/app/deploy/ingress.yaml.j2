apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: miniflux
  namespace: {{ miniflux.namespace }}
  labels:
    {{ miniflux.labels_def | to_nice_yaml() | indent(4) }}
    {{ miniflux.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - miniflux.tool.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: miniflux.tool.{{ web_base_domain }}
    http:
      paths:
      - path: /reminiflux
        pathType: Prefix
        backend:
          service:
            name: reminiflux
            port:
              name: http
      - path: /
        pathType: Prefix
        backend:
          service:
            name: miniflux
            port:
              name: http
