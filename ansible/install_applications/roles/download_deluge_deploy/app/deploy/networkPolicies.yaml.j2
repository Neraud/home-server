
kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-deluge-daemon
  namespace: {{ deluge.namespace }}
  labels:
    {{ deluge_daemon.labels_def | to_nice_yaml() | indent(4) }}
    {{ deluge_daemon.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ deluge_daemon.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow from deluge-web
    - ports:
        - port: daemon
      from:
        - podSelector:
            matchLabels:
              {{ deluge_web.labels_def | to_nice_yaml() | indent(14) }}

---

kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-deluge-web
  namespace: {{ deluge.namespace }}
  labels:
    {{ deluge_web.labels_def | to_nice_yaml() | indent(4) }}
    {{ deluge_web.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ deluge_web.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow http from the ingress controller
    - ports:
        - port: webui
      from:
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}

{% if homepage.config.deluge.enabled %}
    # Allow http from the homepage (to enable the widget)
    - ports:
        - port: webui
      from:
        - namespaceSelector:
            matchLabels:
              name: {{ homepage.namespace }}
          podSelector:
            matchLabels:
              {{ homepage.labels_def | to_nice_yaml() | indent(14) }}
{% endif %}
