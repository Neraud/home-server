apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: deluge
  namespace: {{ deluge.namespace }}
  labels:
    {{ deluge.labels_def | to_nice_yaml() | indent(4) }}
    {{ deluge.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    gethomepage.dev/enabled: "true"
    gethomepage.dev/group: Download
    gethomepage.dev/name: Deluge
    gethomepage.dev/description: Torrent client
    gethomepage.dev/icon: deluge
    gethomepage.dev/pod-selector: "app.kubernetes.io/name=deluge"
{% if homepage.config.deluge.enabled %}
    # https://gethomepage.dev/en/services/deluge/
    gethomepage.dev/widget.type: "deluge"
    gethomepage.dev/widget.url: "http://deluge-web.download-deluge.svc.cluster.local:80"
    gethomepage.dev/widget.fields: '["leech", "download", "seed", "upload"]'
    gethomepage.dev/widget.password: "{{ homepage.config.deluge.password }}"
{% endif %}
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - deluge.dl.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: deluge.dl.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if deluge_web.context_root == '' else deluge_web.context_root }}
        pathType: Prefix
        backend:
          service:
            name: deluge-web
            port:
              name: webui
