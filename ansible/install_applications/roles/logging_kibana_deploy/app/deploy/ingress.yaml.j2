apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: kibana
  namespace: {{ kibana.namespace }}
  labels:
    {{ kibana.labels_def | to_nice_yaml() | indent(4) }}
    {{ kibana.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    gethomepage.dev/enabled: "true"
    gethomepage.dev/group: Monitoring
    gethomepage.dev/name: OpenSearch Dashboards
    gethomepage.dev/description: Visualize your Elasticsearch data
    gethomepage.dev/icon: opensearch
    gethomepage.dev/pod-selector: "app.kubernetes.io/name=kibana"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - kibana.log.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host:  kibana.log.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if kibana.context_root == '' else kibana.context_root + '/?(.*)' }}
        pathType: Prefix
        backend:
          service:
            name: kibana
            port:
              number: 5601
