apiVersion: v1
kind: ConfigMap
metadata:
  name: lemonldap-lmconf
  namespace: {{ lemonldap.namespace }}
  labels:
    {{ lemonldap.labels_def | to_nice_yaml() | indent(4) }}
    {{ lemonldap.labels_desc | to_nice_yaml() | indent(4) }}
data:
  lmConf.json: |
    {{ lookup('template', role_path + '/app/config/lmConf.json.j2', convert_data=False) | replace('\n', '\n    ') }}
