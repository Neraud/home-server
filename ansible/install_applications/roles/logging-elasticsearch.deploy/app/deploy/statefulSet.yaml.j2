apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: elasticsearch
  namespace: {{ elasticsearch.namespace }}
  labels:
    app: elasticsearch
    app-component: elasticsearch
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  serviceName: elasticsearch
  replicas: {{ elasticsearch.replicas }}
  selector:
    matchLabels:
      app: elasticsearch
      app-component: elasticsearch
  template:
    metadata:
      labels:
        app: elasticsearch
        app-component: elasticsearch
    spec:
      containers:
      - name: elasticsearch
        image: "{{ elasticsearch.container.image }}"
        ports:
        - containerPort: 9200
          name: rest
          protocol: TCP
        - containerPort: 9300
          name: inter-node
          protocol: TCP
        - containerPort: 9600
          name: perftop
          protocol: TCP
        resources:
          requests:
            cpu: "{{ elasticsearch.container.requests_cpu }}"
            memory: "{{ elasticsearch.container.requests_memory }}"
          limits:
            cpu: "{{ elasticsearch.container.limits_cpu }}"
            memory: "{{ elasticsearch.container.limits_memory }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
        - name: elasticsearch-pv-claim
          mountPath: /usr/share/elasticsearch/data
        - name: elasticsearch-config
          mountPath: /usr/share/elasticsearch/config/elasticsearch.yml
          subPath: elasticsearch.yml
        - name: elasticsearch-security
          mountPath: /usr/share/elasticsearch/plugins/opendistro_security/securityconfig
        - name: certs-volume
          mountPath: /usr/share/elasticsearch/config/certs
        - name: cluster-ca-volume
          mountPath: /usr/share/elasticsearch/plugins/opendistro_security/cluster/ca.crt
          subPath: ca.crt
        env:
          - name: cluster.name
            value: k8s-logs
          - name: node.name
            valueFrom:
              fieldRef:
                fieldPath: metadata.name
          - name: discovery.seed_hosts
            value: "{% for i in range(0, elasticsearch.replicas|int) %}{% if i > 0 %},{% endif %}elasticsearch-{{ i }}{% endfor %}"
          - name: cluster.initial_master_nodes
            value: "{% for i in range(0, elasticsearch.replicas|int) %}{% if i > 0 %},{% endif %}elasticsearch-{{ i }}{% endfor %}"
          - name: discovery.zen.minimum_master_nodes
            value: "{{ (elasticsearch.replicas|int / 2 + 1) | int }}"
          - name: ES_JAVA_OPTS
            value: "-Xms512m -Xmx512m"
      initContainers:
      - name: fix-permissions
        image: busybox
        command: ["sh", "-c", "chown -R 1000:1000 /usr/share/elasticsearch/data"]
        securityContext:
          privileged: true
        volumeMounts:
        - name: elasticsearch-pv-claim
          mountPath: /usr/share/elasticsearch/data
      - name: increase-vm-max-map
        image: busybox
        command: ["sysctl", "-w", "vm.max_map_count=262144"]
        securityContext:
          privileged: true
      - name: increase-fd-ulimit
        image: busybox
        command: ["sh", "-c", "ulimit -n 65536"]
        securityContext:
          privileged: true
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: elasticsearch-config
        configMap:
          name: elasticsearch-config
      - name: elasticsearch-security
        configMap:
          name: elasticsearch-security
      - name: certs-volume
        secret:
          secretName: elasticsearch-certs
      - name: cluster-ca-volume
        secret:
          secretName: cluster-ca
      nodeSelector:
        capability/general-purpose: 'yes'
  volumeClaimTemplates:
  - metadata:
      name: elasticsearch-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_glusterfs_storage_class_name }}
      resources:
        requests:
          storage: 4G
      selector:
        matchLabels:
          app: elasticsearch
          app-component: elasticsearch
