apiVersion: v1
kind: Service
metadata:
  name: elasticsearch-exporter
  namespace: {{ elasticsearch.namespace }}
  labels:
    app: elasticsearch
    app-component: elastic-exporter
    prometheus-target: elastic-exporter
spec:
  ports:
  - port: 9114
    name: metrics
    targetPort: metrics
  selector:
    app: elasticsearch
    app-component: elastic-exporter
