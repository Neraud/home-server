kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-nginx-exporter
  namespace: {{ nginx_exporter.namespace }}
  labels:
    app: nginx-exporter
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      app: nginx-exporter
      app-component: nginx-exporter

  ingress:
    # Allow from prometheus
    - ports:
        - port: metrics
      from:
        - namespaceSelector:
            matchLabels:
              name: {{ prometheus.namespace }}
          podSelector:
            matchLabels:
              app: prometheus
              prometheus: k8s
