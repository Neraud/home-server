  namespace: {{ nginx_exporter.namespace }}
  labels:
    app: nginx-exporter
    app-component: nginx-exporter
    prometheus-target: nginx-exporter
spec:
  ports:
    - port: 9113
      name: metrics
      targetPort: metrics
  selector:
    app: nginx-exporter
    app-component: nginx-exporter
