kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-syncthing
  namespace: {{ syncthing.namespace }}
  labels:
    {{ syncthing.labels_def | to_nice_yaml() | indent(4) }}
    {{ syncthing.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ syncthing.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow from the ingress controller
    - ports:
        - port: web
      from:
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}

    # Allow from everywhere
    - ports:
        - port: transfer-tcp
        - port: discovery
