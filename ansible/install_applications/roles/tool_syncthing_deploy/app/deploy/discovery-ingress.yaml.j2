apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: discovery
  namespace: {{ syncthing.namespace }}
  labels:
    {{ syncthing_discovery.labels_def | to_nice_yaml() | indent(4) }}
    {{ syncthing_discovery.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
{% if syncthing_discovery.context_root != "" %}
    nginx.ingress.kubernetes.io/rewrite-target: "/$1"
{% endif %}
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - syncthing-discovery.tool.intra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: syncthing-discovery.tool.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if syncthing_discovery.context_root == '' else syncthing_discovery.context_root + '/?(.*)' }}
        pathType: Prefix
        backend:
          service:
            name: discovery
            port:
              number: 8080
