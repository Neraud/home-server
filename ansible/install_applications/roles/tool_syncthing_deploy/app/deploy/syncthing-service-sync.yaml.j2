apiVersion: v1
kind: Service
metadata:
  name: syncthing-sync-udp
  namespace: {{ syncthing.namespace }}
  labels:
    {{ syncthing.labels_def | to_nice_yaml() | indent(4) }}
    {{ syncthing.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    metallb.universe.tf/allow-shared-ip: syncthing-sync
spec:
  type: LoadBalancer
  loadBalancerIP: {{ kubernetes_syncthing_ip }}
  externalTrafficPolicy: Local
  ports:
    - name: transfer-udp
      port: 22000
      targetPort: transfer-udp
      protocol: UDP
    - name: discovery
      port: 21027
      targetPort: discovery
      protocol: UDP
  selector:
    {{ syncthing.labels_def | to_nice_yaml() | indent(4) }}

---

