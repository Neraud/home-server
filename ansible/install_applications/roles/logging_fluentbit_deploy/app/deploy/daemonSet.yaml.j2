apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: fluent-bit
  namespace: {{ fluentbit.namespace }}
  labels:
    {{ fluentbit.labels_def | to_nice_yaml() | indent(4) }}
    {{ fluentbit.labels_desc | to_nice_yaml() | indent(4) }}
    kubernetes.io/cluster-service: "true"
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  selector:
    matchLabels:
      {{ fluentbit.labels_def | to_nice_yaml() | indent(6) }}
      kubernetes.io/cluster-service: "true"
  updateStrategy:
    type: RollingUpdate
  template:
    metadata:
      labels:
        {{ fluentbit.labels_def | to_nice_yaml() | indent(8) }}
        {{ fluentbit.labels_desc | to_nice_yaml() | indent(8) }}
        kubernetes.io/cluster-service: "true"
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "2020"
        prometheus.io/path: /api/v1/metrics/prometheus
    spec:
      containers:
      - name: fluent-bit
        image: "{{ fluentbit.private_image | image_full_name }}"
        imagePullPolicy: Always
        ports:
        - containerPort: 2020
          name: metrics
        env:
        - name: FLUENT_FLUENTD_HOST
          value: "{{ fluentd.servername }}"
        - name: FLUENT_FLUENTD_PORT
          value: "24224"
        - name: FLUENT_FLUENTD_SHARED_KEY
          valueFrom:
            secretKeyRef:
              name: fluent-bit-secret
              key: fluentd_shared_key
        securityContext:
          # Run as root to be able to read host logs
          #runAsNonRoot: true
          readOnlyRootFilesystem: true
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
          readOnly: true
        - name: varlog
          mountPath: /var/log
        - name: varlibdockercontainers
          mountPath: /var/lib/docker/containers
          readOnly: true
        - name: fluent-bit-config
          mountPath: /fluent-bit/etc/
        - name: certs-volume
          mountPath: /fluent-bit/certs
        readinessProbe:
          httpGet:
            scheme: HTTP
            path: /api/v1/metrics/prometheus
            port: metrics
          initialDelaySeconds: 3
          periodSeconds: 5
        resources:
          requests:
            cpu: "{{ fluentbit.container.requests_cpu }}"
            memory: "{{ fluentbit.container.requests_memory }}"
          limits:
            cpu: "{{ fluentbit.container.limits_cpu }}"
            memory: "{{ fluentbit.container.limits_memory }}"
      terminationGracePeriodSeconds: 10
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: varlog
        hostPath:
          path: /var/log
      - name: varlibdockercontainers
        hostPath:
          path: /var/lib/docker/containers
      - name: fluent-bit-config
        configMap:
          name: fluent-bit-config
      - name: certs-volume
        secret:
          secretName: fluent-bit-certs
      serviceAccountName: fluent-bit
      imagePullSecrets:
      - name: docker-config
      tolerations:
      - key: node-role.kubernetes.io/master
        operator: Exists
        effect: NoSchedule
