logger:
  type: stdout
  level: INFO

core:
  threads: 5
  runMode: repeat
  # once every 24h
  sleepDuration: 86400

common:
  github:
    rate_limit_wait_max: 300
{% if release_watcher.github.username %}
    username: "{{ release_watcher.github.username }}"
    password: "{{ release_watcher.github.password }}"
{% endif %}

sources:
  - type: file
    path: watchers.yaml

outputs:
  - type: prometheus_http
    port: 8080
