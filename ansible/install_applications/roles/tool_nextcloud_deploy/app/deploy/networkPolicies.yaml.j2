kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-mysql
  namespace: {{ nextcloud.namespace }}
  labels:
    {{ nextcloud_mysql.labels_def | to_nice_yaml() | indent(4) }}
    {{ nextcloud_mysql.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ nextcloud_mysql.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow from nextcloud
    - ports:
        - port: mysql
      from:
        - podSelector:
            matchLabels:
              {{ nextcloud.labels_def | to_nice_yaml() | indent(14) }}

