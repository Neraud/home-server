apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: redis
  namespace: "{{ nextcloud.namespace }}"
  labels:
    {{ nextcloud_redis.labels_def | to_nice_yaml() | indent(4) }}
    {{ nextcloud_redis.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  selector:
    matchLabels:
      {{ nextcloud_redis.labels_def | to_nice_yaml() | indent(6) }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        {{ nextcloud_redis.labels_def | to_nice_yaml() | indent(8) }}
        {{ nextcloud_redis.labels_desc | to_nice_yaml() | indent(8) }}
    spec:
      containers:
      - name: redis
        image: "{{ nextcloud_redis.private_image | image_full_name }}"
        imagePullPolicy: Always
        command:
        - redis-server
        - /usr/local/etc/redis/redis.conf
        ports:
        - containerPort: 6379
          name: redis
        securityContext:
          runAsNonRoot: true
          runAsUser: 999
          runAsGroup: 1000
          readOnlyRootFilesystem: true
        readinessProbe:
          exec:
            command:
            - sh
            - -c
            - "/usr/local/bin/redis-cli --user {{ nextcloud_redis.health_username }} --pass '' ping"
          initialDelaySeconds: 3
          periodSeconds: 5
        resources:
          requests:
            cpu: "{{ nextcloud_redis.container.requests_cpu }}"
            memory: "{{ nextcloud_redis.container.requests_memory }}"
          limits:
            cpu: "{{ nextcloud_redis.container.limits_cpu }}"
            memory: "{{ nextcloud_redis.container.limits_memory }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
          readOnly: true
        - name: redis-secret
          mountPath: /usr/local/etc/redis/redis.conf
          subPath: redis.conf
        - name: tmp-volume
          mountPath: /data
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: redis-secret
        secret:
          secretName: redis
      - name: tmp-volume
        emptyDir: {}
      imagePullSecrets:
      - name: docker-config
      nodeSelector:
        capability/general-purpose: 'yes'
