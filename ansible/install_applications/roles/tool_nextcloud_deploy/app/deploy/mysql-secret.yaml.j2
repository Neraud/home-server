apiVersion: v1
kind: Secret
metadata:
  name: mysql-pass
  namespace: {{ nextcloud.namespace }}
  labels:
    {{ nextcloud_mysql.labels_def | to_nice_yaml() | indent(4) }}
    {{ nextcloud_mysql.labels_desc | to_nice_yaml() | indent(4) }}
type: Opaque
data:
  password: {{ nextcloud_mysql.password | b64encode }}
  root_password: {{ nextcloud_mysql.root_password | b64encode }}
