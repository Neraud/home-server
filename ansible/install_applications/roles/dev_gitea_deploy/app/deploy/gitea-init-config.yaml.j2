apiVersion: v1
kind: ConfigMap
metadata:
  name: gitea-init
  namespace: {{ gitea.namespace }}
  labels:
    {{ gitea.labels_def | to_nice_yaml() | indent(4) }}
    {{ gitea.labels_desc | to_nice_yaml() | indent(4) }}
data:
  init_and_start.sh: |
    {{ lookup('template', role_path + '/app/config/init_and_start.sh.j2', convert_data=False) | replace('\n', '\n    ') }}
