apiVersion: v1
kind: Secret
metadata:
  name: gitea
  namespace: {{ gitea.namespace }}
  labels:
    {{ gitea.labels_def | to_nice_yaml() | indent(4) }}
    {{ gitea.labels_desc | to_nice_yaml() | indent(4) }}
type: Opaque
data:
  admin_password: {{ gitea.admin.password | b64encode }}
  smtp_password: {{ gitea.smtp.password | b64encode }}
  ldap_bind_password: {{ gitea.ldap.bind_password | b64encode }}
