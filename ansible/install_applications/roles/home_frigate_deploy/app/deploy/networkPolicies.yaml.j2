kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-frigate
  namespace: {{ frigate.namespace }}
  labels:
    {{ frigate.labels_def | to_nice_yaml() | indent(4) }}
    {{ frigate.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ frigate.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    # Allow from the ingress controller
    - ports:
        - port: http
      from:
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}

    # Allow from homeassistant
    - ports:
        - port: http
        - port: rtmp
      from:
        - namespaceSelector:
            matchLabels:
              name: {{ homeassistant.namespace }}
        - podSelector:
            matchLabels:
              {{ homeassistant.labels_def | to_nice_yaml() | indent(14) }}

