apiVersion: v1
kind: ConfigMap
metadata:
  name: frigate-config
  namespace: {{ frigate.namespace }}
  labels:
    {{ frigate.labels_def | to_nice_yaml() | indent(4) }}
    {{ frigate.labels_desc | to_nice_yaml() | indent(4) }}
data:
  config_base.yml: |-
    {{ lookup('template', role_path + '/app/config/config_base.yml.j2') | replace('\n', '\n    ') }}
