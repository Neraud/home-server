kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-homeassistant
  namespace: {{ homeassistant.namespace }}
  labels:
    {{ homeassistant.labels_def | to_nice_yaml() | indent(4) }}
    {{ homeassistant.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ homeassistant.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    - ports:
        - port: homeassistant
      from:
        # Allow from the ingress controller
        - namespaceSelector:
            matchLabels:
              app.kubernetes.io/name: ingress-nginx
          podSelector:
            matchLabels:
              app.kubernetes.io/name: ingress-nginx

        # Allow from nodered
        - namespaceSelector:
            matchLabels:
              name: {{ nodered.namespace }}
          podSelector:
            matchLabels:
              app.kubernetes.io/name: nodered
              app.kubernetes.io/component: nodered

