apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: homeassistant
  namespace: {{ homeassistant.namespace }}
  labels:
    app.kubernetes.io/name: homeassistant
spec:
  tls:
    - hosts:
      - home.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: home.{{ web_base_domain }}
    http:
      paths:
        - path: /
          backend:
            serviceName: homeassistant
            servicePort: 80
