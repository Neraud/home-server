apiVersion: apps/v1
kind: Deployment
metadata:
  name: roomassistant
  namespace: default
  labels:
    app: roomassistant
    app-component: roomassistant
spec:
  replicas: 1
  selector:
    matchLabels:
      app: roomassistant
      app-component: roomassistant
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: roomassistant
        app-component: roomassistant
    spec:
      containers:
      - image: mkerix/room-assistant:1.1.1
        name: roomassistant
{% if roomassistant.environment_variables | default({}) | length > 0 %}
        env:
{% for env_var in roomassistant.environment_variables | dict2items %}
        - name: "{{ env_var.key }}"
          value: "{{ env_var.value }}"
{% endfor %}
{% endif %}
        resources:
          requests:
            cpu: "{{ roomassistant_requests_cpu | default("100m") }}"
            memory: "{{ roomassistant_requests_memory | default("256Mi") }}"
          limits:
            cpu: "{{ roomassistant_limits_cpu | default("250m") }}"
            memory: "{{ roomassistant_limits_memory | default("256Mi") }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      nodeSelector:
        capability/home: 'yes'
