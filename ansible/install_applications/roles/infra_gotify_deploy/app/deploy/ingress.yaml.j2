apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: gotify
  namespace: {{ gotify.namespace }}
  labels:
    {{ gotify.labels_def | to_nice_yaml() | indent(4) }}
    {{ gotify.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
{% if gotify.context_root != "" %}
    nginx.ingress.kubernetes.io/rewrite-target: "/$1"
    nginx.ingress.kubernetes.io/configuration-snippet: |
      rewrite ^({{ gotify.context_root }})$ $1/ permanent;
{% endif %}
    gethomepage.dev/enabled: "true"
    gethomepage.dev/group: Cluster Management
    gethomepage.dev/name: Gotify
    gethomepage.dev/description: Server for sending and receiving messages
    gethomepage.dev/icon: gotify
    gethomepage.dev/pod-selector: "app.kubernetes.io/name=gotify"
    # The widget lists apps, clients and messages for a specific account only :/
    # https://gethomepage.dev/en/services/gotify/
    #gethomepage.dev/widget.type: "gotify"
    #gethomepage.dev/widget.url: "http://gotify.infra-gotify.svc.cluster.local"
    #gethomepage.dev/widget.fields: '["apps", "clients", "messages"]'
    #gethomepage.dev/widget.key: "clientoken"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - gotify.infra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: gotify.infra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if gotify.context_root == '' else gotify.context_root + '/?(.*)' }}
        pathType: Prefix
        backend:
          service:
            name: gotify
            port:
              name: http
