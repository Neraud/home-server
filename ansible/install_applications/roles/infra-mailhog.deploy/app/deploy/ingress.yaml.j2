apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: mailhog
  namespace: {{ mailhog.namespace }}
  labels:
    app.kubernetes.io/name: mailhog
spec:
  tls:
    - hosts:
      - infra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: infra.{{ web_base_domain }}
    http:
      paths:
        - path: /mailhog/?(.*)
          backend:
            serviceName: mailhog
            servicePort: 8025
