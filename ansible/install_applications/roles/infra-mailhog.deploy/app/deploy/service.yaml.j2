apiVersion: v1
kind: Service
metadata:
  name: mailhog
  namespace: {{ mailhog.namespace }}
  labels:
    {{ mailhog.labels_def | to_nice_yaml() | indent(4) }}
    {{ mailhog.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  ports:
    - port: 1025
      name: smtp
    - port: 8025
      name: http
  selector:
    {{ mailhog.labels_def | to_nice_yaml() | indent(4) }}
