apiVersion: v1
kind: Service
metadata:
  name: blocky-dns-udp
  namespace: {{ blocky.namespace }}
  labels:
    {{ blocky.labels_def | to_nice_yaml() | indent(4) }}
    {{ blocky.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    metallb.universe.tf/allow-shared-ip: blocky
spec:
  type: LoadBalancer
  loadBalancerIP: {{ kubernetes_dns_lb_ip }}
  externalTrafficPolicy: Local
  ports:
    - name: dns-udp
      port: 53
      targetPort: dns-udp
      protocol: UDP
  selector:
    {{ blocky.labels_def | to_nice_yaml() | indent(4) }}

---

apiVersion: v1
kind: Service
metadata:
  name: blocky-dns-tcp
  namespace: {{ blocky.namespace }}
  labels:
    {{ blocky.labels_def | to_nice_yaml() | indent(4) }}
    {{ blocky.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    metallb.universe.tf/allow-shared-ip: blocky
spec:
  type: LoadBalancer
  loadBalancerIP: {{ kubernetes_dns_lb_ip }}
  externalTrafficPolicy: Local
  ports:
    - name: dns
      port: 53
      targetPort: dns
      protocol: TCP
  selector:
    {{ blocky.labels_def | to_nice_yaml() | indent(4) }}
