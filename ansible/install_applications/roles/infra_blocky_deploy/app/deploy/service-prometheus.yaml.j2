apiVersion: v1
kind: Service
metadata:
  name: blocky-prometheus
  namespace: {{ blocky.namespace }}
  labels:
    {{ blocky.labels_def | to_nice_yaml() | indent(4) }}
    {{ blocky.labels_desc | to_nice_yaml() | indent(4) }}
    prometheus-target: blocky
spec:
  ports:
  - name: http
    port: 4000
  selector:
    {{ blocky.labels_def | to_nice_yaml() | indent(4) }}
