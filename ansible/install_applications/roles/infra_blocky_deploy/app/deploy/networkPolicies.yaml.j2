kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-blocky
  namespace: {{ blocky.namespace }}
  labels:
    {{ blocky.labels_def | to_nice_yaml() | indent(4) }}
    {{ blocky.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ blocky.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    - ports:
        - port: http
      from:
        # Allow from prometheus
        - namespaceSelector:
            matchLabels:
              name: {{ prometheus.namespace }}
          podSelector:
            matchLabels:
              {{ prometheus.labels_def | to_nice_yaml() | indent(14) }}
    # Allow dns / dns-udp from all
    - ports:
        - port: dns
        - port: dns-udp
          protocol: UDP

---

