apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: redis
  namespace: "{{ blocky.namespace }}"
  labels:
    {{ blocky_redis.labels_def | to_nice_yaml() | indent(4) }}
    {{ blocky_redis.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    reloader.stakater.com/auto: "true"
spec:
  selector:
    matchLabels:
      {{ blocky_redis.labels_def | to_nice_yaml() | indent(6) }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        {{ blocky_redis.labels_def | to_nice_yaml() | indent(8) }}
        {{ blocky_redis.labels_desc | to_nice_yaml() | indent(8) }}
    spec:
{% if blocky_redis.persistance_enabled %}
      initContainers:
      - name: create-data-dir
        image: "{{ busybox.private_image | image_full_name }}"
        imagePullPolicy: Always
        command:
          - "sh"
          - "-c"
          - |
            rm -Rf /data-volume/data
            mkdir -p /data-volume/data
            chown -R 999:1000 /data-volume/*
        securityContext:
          readOnlyRootFilesystem: true
        volumeMounts:
        - name: redis-pv-claim
          mountPath: /data-volume
{% endif %}
      containers:
      - name: redis
        image: "{{ blocky_redis.private_image | image_full_name }}"
        imagePullPolicy: Always
        command:
        - redis-server
        - /usr/local/etc/redis/redis.conf
        ports:
        - containerPort: 6379
          name: redis
        securityContext:
          runAsNonRoot: true
          runAsUser: 999
          runAsGroup: 1000
          readOnlyRootFilesystem: true
        readinessProbe:
          exec:
            command:
            - sh
            - -c
            - "/usr/local/bin/redis-cli --user {{ blocky_redis.health_username }} --pass '' ping"
          initialDelaySeconds: 3
          periodSeconds: 5
        resources:
          requests:
            cpu: "{{ blocky_redis.container.requests_cpu }}"
            memory: "{{ blocky_redis.container.requests_memory }}"
          limits:
            cpu: "{{ blocky_redis.container.limits_cpu }}"
            memory: "{{ blocky_redis.container.limits_memory }}"
        volumeMounts:
        - name: tz-config
          mountPath: /etc/localtime
          readOnly: true
        - name: redis-secret
          mountPath: /usr/local/etc/redis/redis.conf
          subPath: redis.conf
{% if blocky_redis.persistance_enabled %}
        - name: redis-pv-claim
          mountPath: /data
          subPath: data
{% else %}
        - name: data-volume
          mountPath: /data
{% endif %}
      volumes:
      - name: tz-config
        hostPath:
          path: /etc/localtime
      - name: redis-secret
        secret:
          secretName: redis
{% if not blocky_redis.persistance_enabled %}
      - name: data-volume
        emptyDir: {}
{% endif %}
      imagePullSecrets:
      - name: docker-config
      nodeSelector:
        capability/general-purpose: 'yes'
{% if blocky_redis.persistance_enabled %}
  volumeClaimTemplates:
  - metadata:
      name: redis-pv-claim
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: {{ kubernetes_glusterfs_storage_class_name }}
      resources:
        requests:
          storage: 32M
      selector:
        matchLabels:
          {{ blocky_redis.labels_def | to_nice_yaml() | indent(10) }}
{% endif %}