apiVersion: v1
kind: Service
metadata:
  name: pihole-dns-udp
  namespace: {{ pihole.namespace }}
  labels:
    {{ pihole.labels_def | to_nice_yaml() | indent(4) }}
    {{ pihole.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    metallb.universe.tf/allow-shared-ip: pihole
spec:
  type: LoadBalancer
  loadBalancerIP: {{ kubernetes_pihole_lb_ip }}
  externalTrafficPolicy: Local
  ports:
    - name: dns-udp
      port: {{ kubernetes_pihole_tcp_port }}
      targetPort: dns-udp
      protocol: UDP
  selector:
    {{ pihole.labels_def | to_nice_yaml() | indent(4) }}

---

apiVersion: v1
kind: Service
metadata:
  name: pihole-dns-tcp
  namespace: {{ pihole.namespace }}
  labels:
    {{ pihole.labels_def | to_nice_yaml() | indent(4) }}
    {{ pihole.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
    metallb.universe.tf/allow-shared-ip: pihole
spec:
  type: LoadBalancer
  loadBalancerIP: {{ kubernetes_pihole_lb_ip }}
  externalTrafficPolicy: Local
  ports:
    - name: dns
      port: {{ kubernetes_pihole_tcp_port }}
      targetPort: dns
      protocol: TCP
  selector:
    {{ pihole.labels_def | to_nice_yaml() | indent(4) }}
