apiVersion: v1
kind: Service
metadata:
  name: pihole-dns
  namespace: {{ pihole.namespace }}
  labels:
    {{ pihole.labels_def | to_nice_yaml() | indent(4) }}
    {{ pihole.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  type: NodePort
  ports:
    - name: dns
      port: 53
      targetPort: dns
      protocol: TCP
      nodePort: {{ kubernetes_pihole_tcp_port }}
    - name: dns-udp
      port: 53
      targetPort: dns-udp
      protocol: UDP
      nodePort: {{ kubernetes_pihole_udp_port }}
  selector:
    {{ pihole.labels_def | to_nice_yaml() | indent(4) }}
