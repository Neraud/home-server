apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: prometheus
  namespace: {{ prometheus.namespace }}
  labels:
    {{ prometheus.labels_def | to_nice_yaml() | indent(4) }}
    {{ prometheus.labels_desc | to_nice_yaml() | indent(4) }}
  annotations:
{% if prometheus.context_root != "" %}
    nginx.ingress.kubernetes.io/rewrite-target: "/$1"
{% endif %}
    gethomepage.dev/enabled: "true"
    gethomepage.dev/group: Monitoring
    gethomepage.dev/name: Prometheus
    gethomepage.dev/description: Monitoring solution
    gethomepage.dev/icon: prometheus
    gethomepage.dev/pod-selector: "app.kubernetes.io/name=prometheus"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
      - ntfy.infra.{{ web_base_domain }}
      secretName: ingress-tls
  rules:
  - host: prometheus.monitoring.intra.{{ web_base_domain }}
    http:
      paths:
      - path: {{ '/' if prometheus.context_root == '' else prometheus.context_root + '/?(.*)' }}
        pathType: Prefix
        backend:
          service:
            name: prometheus-k8s
            port:
              number: 9090
