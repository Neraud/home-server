kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-to-alertmanager-k8s
  namespace: {{ prometheus.namespace }}
  labels:
    {{ alertmanager.labels_def | to_nice_yaml() | indent(4) }}
    {{ alertmanager.labels_desc | to_nice_yaml() | indent(4) }}
spec:
  types: [Ingress]

  podSelector:
    matchLabels:
      {{ alertmanager.labels_def | to_nice_yaml() | indent(6) }}

  ingress:
    - ports:
        - port: web
      from:
        # Allow from the ingress controller
        - namespaceSelector:
            matchLabels:
              {{ ingress_nginx.namespace_labels_def | to_nice_yaml() | indent(14) }}
          podSelector:
            matchLabels:
              {{ ingress_nginx.labels_def | to_nice_yaml() | indent(14) }}

    - ports:
        - port: web
        - port: reloader-web
        # Allow from prometheus
        - namespaceSelector:
            matchLabels:
              name: {{ prometheus.namespace }}
          podSelector:
            matchLabels:
              {{ prometheus.labels_def | to_nice_yaml() | indent(14) }}
