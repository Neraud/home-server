apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app.kubernetes.io/name: keepalived-exporter
    app.kubernetes.io/component: keepalived-exporter
  name: keepalived-exporter
  namespace: {{ prometheus.namespace }}
spec:
  endpoints:
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: metrics
  namespaceSelector:
    matchNames:
    - monitoring-keepalived-exporter
  selector:
    matchLabels:
      prometheus-target: keepalived-exporter
