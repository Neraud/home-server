apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    {{ blocky.labels_def | to_nice_yaml() | indent(4) }}
    {{ blocky.labels_desc | to_nice_yaml() | indent(4) }}
  name: blocky
  namespace: {{ prometheus.namespace }}
spec:
  endpoints:
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: http
  jobLabel: app.kubernetes.io/name
  namespaceSelector:
    matchNames:
    - {{ blocky.namespace }}
  selector:
    matchLabels:
      prometheus-target: blocky
