apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app.kubernetes.io/name: crowdsec-external
    app.kubernetes.io/component: crowdsec-external
  name: crowdsec-external
  namespace: {{ prometheus.namespace }}
spec:
  endpoints:
  - interval: {{ (30 * service_monitors.interval_factor | float) | int }}s
    port: metrics
    path: /metrics
  targetLabels:
    - crowdsec-role
  namespaceSelector:
    matchNames:
    - monitoring-crowdsec-external
  selector:
    matchLabels:
      prometheus-target: crowdsec-external
